# Electron 应用配置
APP_NAME=AI Note Generator
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered video note generator with subtitle extraction

# 开发环境配置
DEV_SERVER_URL=http://localhost:5173
DEV_BACKEND_PORT=5000
DEV_OPEN_DEVTOOLS=true

# 生产环境配置
PROD_BACKEND_PORT=5000
PROD_OPEN_DEVTOOLS=false

# 窗口配置
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
WINDOW_MIN_WIDTH=800
WINDOW_MIN_HEIGHT=600

# 文件路径配置
OUTPUT_DIR=Output
SUBTITLES_DIR=Subtitles
PROMPTS_DIR=Prompts

# 支持的文件格式
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv,webm
SUPPORTED_AUDIO_FORMATS=mp3,wav,flac,m4a,ogg
SUPPORTED_SUBTITLE_FORMATS=srt,vtt,ass,ssa
SUPPORTED_OUTPUT_FORMATS=md,txt

# 默认设置
DEFAULT_LANGUAGE=zh
DEFAULT_OUTPUT_FORMAT=md
DEFAULT_PROMPT_TYPE=详细
DEFAULT_WHISPER_MODEL=base
DEFAULT_AI_PROVIDER=openai